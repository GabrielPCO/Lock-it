<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabrielfreitas.nac_1_lockit.abre_armario">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/gradiente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/gradiente"
                />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="236dp"
                android:layout_height="53dp"
                app:srcCompat="@drawable/logo"
                android:contentDescription="@string/app_name"
                android:layout_marginTop="290dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pronto"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="390dp"
                android:lines="3"
                android:textAlignment="center"
                android:text="@string/prosseguir"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:layout_marginTop="20dp"
                android:background="#018aff"
                android:visibility="invisible"
                android:textColor="#ffffff"
                android:id="@+id/control_led_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/on"
                android:layout_gravity="center"
                />
            <Button
                android:layout_marginTop="20dp"
                android:background="#018aff"
                android:id="@+id/control_led_off"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/off"
                android:layout_gravity="center"
                android:visibility="invisible"/>
            <Button
                android:layout_marginTop="20dp"
                android:background="#018aff"
                android:visibility="invisible"
                android:textColor="#ffffff"
                android:id="@+id/control_led_disconect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disconect"
                android:layout_gravity="center"
                />
        </FrameLayout>


</android.support.constraint.ConstraintLayout>
